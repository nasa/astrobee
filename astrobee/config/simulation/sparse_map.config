-- Feature rate
rate = 3.0;

-- the max number of samples we'll try for features
num_samp = 1000;

-- the number of features sent per message
num_features = 50;

-- Delay between registration and features (3 Hz)
delay_features = 0.01;

-- Near clip of the ray used for collision detection
near_clip = 0.2;

-- Far clip of the ray used for collision detection
far_clip = 100.0;

-- Time taken from shutter to delivery of data
delay_camera = 0.0033;